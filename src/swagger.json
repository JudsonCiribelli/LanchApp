{
  "openapi": "3.0.0",
  "info": {
    "title": "LanchApp API",
    "description": "Documentação da API de Delivery de Pizzaria/Lanchonete",
    "version": "1.0.0",
    "contact": {
      "email": "seu_email@exemplo.com"
    }
  },
  "servers": [
    {
      "url": "http://localhost:3333",
      "description": "Servidor Local"
    }
  ],
  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    }
  },
  "paths": {
    "/session": {
      "post": {
        "tags": ["Autenticação"],
        "summary": "Realizar Login",
        "description": "Autentica um usuário e retorna o token JWT.",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "email": {
                    "type": "string",
                    "example": "admin@pizzaria.com"
                  },
                  "password": { "type": "string", "example": "12345678" }
                },
                "required": ["email", "password"]
              }
            }
          }
        },
        "responses": {
          "200": { "description": "Login realizado com sucesso" },
          "400": { "description": "Email ou senha incorretos" }
        }
      }
    },
    "/user": {
      "post": {
        "tags": ["Usuários"],
        "summary": "Criar Usuário",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "name": { "type": "string", "example": "João Silva" },
                  "email": { "type": "string", "example": "joao@teste.com" },
                  "password": { "type": "string", "example": "12345678" },
                  "phone": { "type": "string", "example": "11988887777" }
                }
              }
            }
          }
        },
        "responses": {
          "201": { "description": "Usuário criado com sucesso" }
        }
      },
      "get": {
        "tags": ["Usuários"],
        "summary": "Detalhes do Usuário Logado",
        "security": [{ "bearerAuth": [] }],
        "responses": {
          "200": { "description": "Dados do perfil retornados" },
          "401": { "description": "Não autorizado" }
        }
      }
    },
    "/category": {
      "post": {
        "tags": ["Produtos & Categorias"],
        "summary": "Criar Categoria (Admin)",
        "security": [{ "bearerAuth": [] }],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "categoryName": { "type": "string", "example": "Bebidas" }
                }
              }
            }
          }
        },
        "responses": {
          "201": { "description": "Categoria criada" },
          "400": { "description": "Erro de validação ou permissão" }
        }
      }
    },
    "/product": {
      "post": {
        "tags": ["Produtos & Categorias"],
        "summary": "Criar Produto com Imagem (Admin)",
        "description": "Requer envio como multipart/form-data para upload de imagem.",
        "security": [{ "bearerAuth": [] }],
        "requestBody": {
          "content": {
            "multipart/form-data": {
              "schema": {
                "type": "object",
                "properties": {
                  "name": { "type": "string", "example": "Coca Cola 2L" },
                  "price": { "type": "string", "example": "12.50" },
                  "description": { "type": "string", "example": "Gelada" },
                  "categoryId": { "type": "string", "format": "uuid" },
                  "file": { "type": "string", "format": "binary" }
                },
                "required": [
                  "name",
                  "price",
                  "description",
                  "categoryId",
                  "file"
                ]
              }
            }
          }
        },
        "responses": {
          "201": { "description": "Produto criado" }
        }
      }
    },
    "/order": {
      "post": {
        "tags": ["Pedidos"],
        "summary": "Abrir novo Pedido",
        "security": [{ "bearerAuth": [] }],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "table": { "type": "number", "example": 10 },
                  "name": { "type": "string", "example": "Mesa 10 - João" },
                  "type": {
                    "type": "string",
                    "enum": ["DINE_IN", "DELIVERY", "PICKUP"],
                    "example": "DINE_IN"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "201": { "description": "Pedido aberto com sucesso" }
        }
      },
      "delete": {
        "tags": ["Pedidos"],
        "summary": "Remover Pedido",
        "security": [{ "bearerAuth": [] }],
        "parameters": [
          {
            "in": "query",
            "name": "orderId",
            "schema": { "type": "string", "format": "uuid" },
            "required": true,
            "description": "ID do pedido a ser removido"
          }
        ],
        "responses": {
          "200": { "description": "Pedido removido" }
        }
      }
    },
    "/order/add": {
      "post": {
        "tags": ["Pedidos"],
        "summary": "Adicionar Item ao Pedido",
        "security": [{ "bearerAuth": [] }],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "orderId": { "type": "string", "format": "uuid" },
                  "productId": { "type": "string", "format": "uuid" },
                  "amount": { "type": "number", "example": 2 }
                }
              }
            }
          }
        },
        "responses": {
          "201": { "description": "Item adicionado" }
        }
      }
    },
    "/order/status": {
      "put": {
        "tags": ["Cozinha"],
        "summary": "Atualizar Status do Pedido (Admin)",
        "security": [{ "bearerAuth": [] }],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "orderId": { "type": "string", "format": "uuid" },
                  "status": {
                    "type": "string",
                    "enum": [
                      "PENDING",
                      "IN_PREPARATION",
                      "READY",
                      "ON_THE_WAY",
                      "DELIVERED",
                      "FINISHED"
                    ],
                    "example": "IN_PREPARATION"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": { "description": "Status atualizado" },
          "400": { "description": "Não autorizado ou Status inválido" }
        }
      }
    }
  }
}
